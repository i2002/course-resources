{
  "name": "course-resources",
  "version": "1.0.0",
  "description": "WordPress plugin to manage student access to course materials",
  "main": "index.js",
  "scripts": {
    "wp-env": "wp-env",
    "build": "wp-scripts build",
    "start": "wp-scripts start",
    "lint:js": "wp-scripts lint-js",
    "composer": "wp-env run cli --env-cwd=wp-content/plugins/course-resources composer",
    "wp-cli": "wp-env run cli --env-cwd=wp-content/plugins/course-resources wp",
    "i18n:pot": "npm run wp-cli i18n make-pot . lang/course-resources.pot -- --domain=course-resources --include=\"build/frontend.js,build/backend.js,include/,course-resources.php\"",
    "i18n:json": "npm run wp-cli i18n make-json lang/ -- --no-purge",
    "i18n:mo": "npm run wp-cli i18n make-mo lang/ lang/",
		"dist": "node .tools/build.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Tudor Butufei",
  "license": "MIT",
  "devDependencies": {
    "@heroicons/react": "^2.1.1",
    "@types/react": "^18.2.62",
    "@wordpress/env": "^9.4.0",
    "@wordpress/scripts": "^27.3.0",
    "archiver": "^7.0.0",
    "autoprefixer": "^10.4.18",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^6.10.0",
    "mini-css-extract-plugin": "^2.8.1",
    "postcss": "^8.4.35",
    "postcss-import": "^16.0.1",
    "postcss-loader": "^8.1.1",
    "postcss-preset-env": "^9.4.0",
    "prettier": "^3.2.5",
    "style-loader": "^3.3.4",
    "tailwindcss": "^3.4.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.18",
    "@headlessui/tailwindcss": "^0.2.0",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@wordpress/api-fetch": "^6.49.0",
    "@wordpress/element": "^5.29.0",
    "@wordpress/i18n": "^4.52.0",
    "@wordpress/url": "^3.53.0",
    "pdfjs-dist": "^4.0.379",
    "react-router-dom": "^6.22.2"
  }
}
